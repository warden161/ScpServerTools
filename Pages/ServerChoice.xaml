<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScpServerTools.Pages.ServerChoice"
             Title="Server Choice">
    <VerticalStackLayout>
        <Label 
            Text="Please select a server to run on (pick 7777 if you don't know what this means)."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout Padding="20" Spacing="20" x:Name="ButtonLayout" HorizontalOptions="CenterAndExpand"/>
    </VerticalStackLayout>
</ContentPage>