<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScpServerTools.Pages.Subpages.GuideSteamId"
             Title="How to get a Steam ID 64">
    <VerticalStackLayout>
        <Label 
            Text="You need to insert a Steam ID 64 to get admin."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <!-- Regular text -->
                    <Span Text="Watch this video on how to do it: " />
                    <!-- Clickable YouTube URL -->
                    <Span Text="https://www.youtube.com/watch?v=FTuiA5k0R_k" 
                          TextColor="Blue" 
                          TextDecorations="Underline">
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUrlTapped" />
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </VerticalStackLayout>
</ContentPage>